@model IEnumerable<LolFightProjekat.Models.Admin>

@{
    ViewBag.Title = "View Admins";
}
<link href="Content/bootstrap.css" rel="stylesheet">
<h2>View Admins</h2>



<ul class="nav nav-tabs">
    <li><a href="../Admin">Home</a></li>
    <li class="active dropdown" >
        <a href="Admin/AddAdmin" class="dropdown-toggle" data-toggle="dropdown">Admins <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="#">View Admins</a></li>
            <li><a href="../Admin/Create">Add Admins</a></li>
        </ul>
    </li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Items<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="../AddItem">View Items</a></li>
            <li><a href="../AddItem/Create">Add Items</a></li>
        </ul>
    </li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Champions<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="ChampionType">View Champions</a></li>
            <li><a href="ChampionType/Create">Add Champions</a></li>
        </ul>
    </li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">News<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="News">View News</a></li>
            <li><a href="News/Create">Add News</a></li>
        </ul>
    </li>
    <li><a href=" @Url.Action("Logout", "Admin", new { id = 1 }) ">Logout</a></li>


</ul>


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdAdmin  }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdAdmin  }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdAdmin  })
            </td>
        </tr>
    }

    </table>

